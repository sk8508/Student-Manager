<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="studentmanager.AdminController"
            style="-fx-background-color: #FFE4C4; -fx-padding: 15;">
    <top>
        <HBox spacing="20" alignment="CENTER_RIGHT">
            <Label text="Student Manager Admin Panel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #E91E63; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER">
            <TableView fx:id="studentTable" prefHeight="300" prefWidth="600">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="200"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
                    <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="150"/>
                </columns>
            </TableView>

            <HBox spacing="15" alignment="CENTER">
                <TextField fx:id="nameField" promptText="Name" prefWidth="150"/>
                <TextField fx:id="emailField" promptText="Email" prefWidth="200"/>
                <TextField fx:id="phoneField" promptText="Phone" prefWidth="150"/>
            </HBox>

            <HBox spacing="15" alignment="CENTER">
                <Button text="Add" onAction="#handleAdd" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button text="Update" onAction="#handleUpdate" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                <Button text="Delete" onAction="#handleDelete" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
            </HBox>

            <Label fx:id="messageLabel" style="-fx-text-fill: green;"/>
        </VBox>
    </center>
</BorderPane>
